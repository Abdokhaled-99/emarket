@model IEnumerable<emarket.Models.Product>
<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>Products</title> 
    <link rel="stylesheet" href="../../style/assets/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat:400,400i,700,700i,600,600i">
    <link rel="stylesheet" href="../../style/assets/fonts/font-awesome.min.css">
    <link rel="stylesheet" href="../../style/assets/fonts/simple-line-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/baguettebox.js/1.10.0/baguetteBox.min.css">
    <link rel="stylesheet" href="../../style/assets/css/Navigation-with-Search.css">
    <link rel="stylesheet" href="../../style/assets/css/smoothproducts.css">
</head>

<body>
    @if (Model.Count()== 0)
    {
        <div class="block-heading">
            <h2 class="text-info" style="margin-top: 39px;">No Products Found</h2>
        </div>
    }

    else
    {
        <main class="page catalog-page">
            <section class="clean-block clean-catalog dark">
                <div class="container">
                    <div class="block-heading">
                        <h2 class="text-info" style="margin-top: 39px;">Products</h2>
                    </div>
                    <div class="content">
                        <div class="row">
                            <div class="col-md-12 col-lg-12">
                                <div class="products" style="padding: 0;">
                                    <div class="row no-gutters">
                                        @foreach (var product in Model)
                                        {
                                            <div class="col-12 col-sm-6 col-md-4 col-lg-2 col-xl-2 offset-lg-0">
                                                <div class="clean-product-item">

                                                    <div class="image"><a class="d-lg-flex justify-content-center" style="min-height: 153px" href=@Url.Action("Details", new {id = product.Id})>
                                                        <img class="img-fluid d-block mx-auto" src="@Url.Content(product.Image)" style="width: 153px; max-height: 153px;min-height: 153px">
                                                    </a></div>
                                                    <div class="product-name" ><a href=@Url.Action("Details",new {id = product.Id})>@product.Name</a></div>
                                                    <h3>$@product.Price</h3><button  class="btn btn-primary add-to-cart" type="button" data-product-id="@product.Id" >Add to cart</button>
                                                    <div class="about">
                                                        <div class="price"></div>
                                                    </div>
                                                </div>
                                            </div>
                                        }

                                    </div>
                                    <nav>
                                        <ul class="pagination">
                                            <li class="page-item disabled"><a class="page-link" href="#" aria-label="Previous"><span aria-hidden="true">«</span></a></li>
                                            <li class="page-item active"><a class="page-link" href="#">1</a></li>
                                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                                            <li class="page-item"><a class="page-link" href="#" aria-label="Next"><span aria-hidden="true">»</span></a></li>
                                        </ul>
                                    </nav>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </main>

    }

    <script src="../../style/assets/js/jquery.min.js"></script>
    <script src="../../style/assets/bootstrap/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/baguettebox.js/1.10.0/baguetteBox.min.js"></script>
    <script src="../../style/assets/js/smoothproducts.min.js"></script>
<script src="../../style/assets/js/theme.js"></script>
<script>
    $(document).ready(function() {
        $('.add-to-cart').on('click',
            function() {
                var button = $(this);

                $.ajax({
                    url: '/Cart/AddtoCart/' + (button.attr("data-product-id")),
                    success: function() {
                        
                    }
                });
            });
    })
</script>
</body>

</html>